<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/menuView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_assistive_touch_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_assistive_touch_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/stop_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/ic_not_interested_black_24dp"
            android:gravity="center"
            android:text="@string/stop"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/prev_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_action_prev"
            android:gravity="center"
            android:text="@string/prev"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/stop_btn"
            app:layout_constraintTop_toBottomOf="@+id/stop_btn" />

        <TextView
            android:id="@+id/next_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_action_next"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/stop_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stop_btn" />

        <TextView
            android:id="@+id/home_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_action_home"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prev_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>