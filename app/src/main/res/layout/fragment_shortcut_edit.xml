<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray">

    <TextView
            android:text="@string/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:id="@+id/title_shortcut_title_edit"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/total_time_edit"/>

    <EditText
            android:text="@string/title_text"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/shortcut_title_edit"
            android:layout_toRightOf="@id/title_shortcut_title_edit"
            android:layout_marginLeft="40dp"
            android:layout_alignBaseline="@+id/title_shortcut_title_edit"/>

    <TextView
            android:text="@string/time_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:id="@+id/total_time_edit"
            android:layout_margin="20dp"
            android:layout_below="@+id/title_shortcut_title_edit"/>

    <TextView
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/time_edit"
            android:layout_toRightOf="@id/total_time_edit"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/total_time_edit"/>

    <TextView
            android:text="@string/description_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:id="@+id/description_title_edit"
            android:layout_below="@+id/total_time_edit"
            android:layout_margin="20dp"/>

    <EditText
            android:inputType="textMultiLine"
            android:layout_width="379dp"
            android:layout_height="135dp"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/description_edit"
            android:layout_below="@+id/description_title_edit"
            android:layout_marginTop="-19dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"/>

    <TextView
            android:text="@string/apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:id="@+id/apps_title_edit"
            android:layout_below="@+id/description_edit"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/app_list"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apps_title_edit"/>

    <TextView
            android:text="@string/actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:id="@+id/actions_title"
            android:layout_below="@+id/app_list"
            android:layout_margin="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view_edit"
            android:layout_below="@id/actions_title"
            android:layout_marginLeft="30dp"
    />


</RelativeLayout>